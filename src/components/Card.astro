---
interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow ${className}`}>
  {icon && (
    <div class="text-4xl mb-4">{icon}</div>
  )}
  {title && (
    <h3 class="text-xl font-serif font-semibold text-forest-800 mb-3">
      {title}
    </h3>
  )}
  <div class="text-gray-700">
    <slot />
  </div>
</div>
